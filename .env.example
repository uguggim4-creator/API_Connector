# Database
DATABASE_URL="file:./dev.db"

# 데이터 저장 디렉토리 (선택사항)
# 로컬 개발: ./data (기본값)
# 서버리스 환경: /tmp/data (자동 설정)
# 커스텀 경로를 사용하려면 아래 주석을 해제하고 수정하세요
# DATA_DIR=./data

# 암호화 키 (프로덕션에서는 안전하게 관리)
ENCRYPTION_KEY="your-secret-encryption-key-change-this-in-production"

# API Keys - 여기에 API 키를 입력하면 자동으로 연결됩니다
# OpenAI API Key
OPENAI_API_KEY=

# Google Gemini/Veo API Key (동일한 키 사용)
GOOGLE_API_KEY=

# Kling AI API Key
KLING_API_KEY=

# Seedream API Key
SEEDREAM_API_KEY=

# Supabase Configuration (for image storage and authentication)
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_BUCKET_NAME=seedream-images

# Supabase Public Keys (for client-side auth)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# 자동 연결 활성화 (true로 설정하면 서버 시작 시 자동으로 환경 변수의 API 키를 등록)
AUTO_IMPORT_API_KEYS=true
